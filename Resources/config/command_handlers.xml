<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="milio_user.write_model_class">Milio\User\Domain\Write\Model\UserWrite</parameter>
    </parameters>

    <services>

         <service id="milio_user.command_handler"
                     class="Milio\User\Domain\Write\Handler\RegisterUserCommandHandler">
             <argument type="service" id="milio_user.event_sourcing.write_repository" />
             <argument>%milio_user.user_write_class%</argument>
         </service>

         <service id="milio_user.event_sourcing.write_repository"
                    class="Milio\User\Domain\Write\Model\UserWriteEventSourcingRepository">
             <argument type="service" id="broadway.event_store"/>
             <argument type="service" id="broadway.event_handling.event_bus"/>
             <argument>%milio_user.user_write_class%</argument>
         </service>

    </services>

</container>
